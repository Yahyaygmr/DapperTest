@model List<DapperTest.Dtos.CategoryDtos.ResultCategoryDto>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container">
    <h1>Kategori Listesi</h1>
    <hr />
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.CategoryName</td>
                <td><a href="/AdminCategory/DeleteCategory/@item.CategoryId">Sil</a></td>
                <td><a href="/AdminCategory/UpdateCategory/@item.CategoryId">Güncelle</a></td>
            </tr>
        }
    </table>
    <div class="row">
        <a href="/AdminCategory/CreateCategory/">+ Yeni Kategori Oluştur</a>
    </div>
</div>



@model DapperTest.Dtos.CategoryDtos.GetByIdCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Kategori Güncelle</h1>
            <hr />
            <form method="post">
                <input type="hidden" asp-for="CategoryId"/>
                <div class="form-group my-3">
                    <label>Kategori Adı</label>
                    <input type="text" asp-for="CategoryName" class="form-control" />
                </div>
                <div class="form-group my-3">
                    <button class="btn btn-info">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

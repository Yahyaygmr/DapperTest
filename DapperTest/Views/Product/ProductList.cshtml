@model List<DapperTest.Dtos.ProductDtos.ResultProductWithCategoryDto>
@{
    ViewData["Title"] = "ProductList";
    int count = 0;
}

<div class="container">
    <h1>Ürün Listesi (@ViewBag.productCount)</h1>
    <hr />
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Ürün Fiyatı</th>
            <th>Ürün Stok</th>
            <th>Kategori</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.CategoryName</td>
                <td><a href="/Product/DeleteProduct/@item.ProductId">Sil</a></td>
                <td><a href="/Product/UpdateProduct/@item.ProductId">Güncelle</a></td>
            </tr>
        }
    </table>
    <div class="row">
        <a href="/Product/CreateProduct/">+ Yeni Ürün Oluştur</a>
    </div>
</div>





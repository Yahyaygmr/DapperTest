@model DapperTest.Dtos.ProductDtos.GetByIdProductDto
@{
    ViewData["Title"] = "UpdateProduct";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Ürün Güncelle</h1>
            <hr />
            <form method="post">
                <input type="hidden" asp-for="ProductId"/>
                <div class="form-group my-3">
                    <label>Ürün Adı</label>
                    <input type="text" asp-for="ProductName" class="form-control" />
                </div>
                <div class="form-group my-3">
                    <label>Stok</label>
                    <input type="text" asp-for="Stock" class="form-control" />
                </div>
                <div class="form-group my-3">
                    <label>Fiyat</label>
                    <input type="text" asp-for="Price" class="form-control" />
                </div>
                <div class="form-group my-3">
                    <label>Kategori Id</label>
                    <input type="text" asp-for="CategoryId" class="form-control" />
                </div>
                <div class="form-group my-3">
                    <button class="btn btn-info">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

@model DapperTest.Dtos.LocationDtos.CreateLocationDto
@{
    ViewData["Title"] = "CreateLocation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Lokasyon Oluştur</h1>
            <hr />
            <form method="post">
                <div class="form-group my-3">
                    <label>Lokasyon Adı</label>
                    <input type="text" asp-for="LocationName" class="form-control" />
                </div>
                <div class="form-group my-3">
                    <button class="btn btn-info">Oluştur</button>
                </div>
            </form>
        </div>
    </div>
</div>






@model DapperTest.Dtos.SliderDtos.CreateSliderDto
@{
    ViewData["Title"] = "CreateSlider";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Slider Item Oluştur</h1>
            <hr />
            <form method="post">
                <div class="form-group my-3">
                    <label>Resim Url</label>
                    <input type="text" asp-for="ImageUrl" class="form-control" />
                </div>
                <div class="form-group my-3">
                    <label>Başlık</label>
                    <input type="text" asp-for="Title" class="form-control" />
                </div>
                <div class="form-group my-3">
                    <label>Adres</label>
                    <input type="text" asp-for="Location" class="form-control" />
                </div>
                <div class="form-group my-3">
                    <label>Fiyat</label>
                    <input type="text" asp-for="Price" class="form-control" />
                </div>
                <div class="form-group my-3">
                    <label>Açıklama</label>
                    <input type="text" asp-for="Description" class="form-control" />
                </div>
                <div class="form-group m-3">
                    <input id="es" type="checkbox" asp-for="Status" class="form-check-input" />
                    <label for="es" class="form-check-label">Yayınla</label>
                </div>
                <div class="form-group my-3">
                    <button class="btn btn-info">Oluştur</button>
                </div>
            </form>
        </div>
    </div>
</div>